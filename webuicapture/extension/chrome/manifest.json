{
    "manifest_version": 3,
    "name": "UI Capture Chrome Extension",
    "version": "1.0",
    "description": "Inspect UI elements and highlight them on the page.",
    "permissions": [
        "activeTab",
        "scripting",
        "downloads",
        "tabs"
    ],
    "host_permissions": [
        "http://localhost:7659/*",
        "https://localhost:7659/*",
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "icons": {
        "48": "icon.png",
        "128": "icon.png"
    }
}